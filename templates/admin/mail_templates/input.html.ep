    <div class="control-group">
      <label class="control-label" for="field_subject">タイトル</label>
      <div class="controls">
        <input type="text" id="field_subject" name="subject" placeholder="" value="<%= decode( $params->{subject} ) %>" />
        <span class="help-inline">
          メールのタイトルを入力してください。
          % if( exists $messages->{subject} ) {
          <p class="text-error"><%= decode( $messages->{subject} ) %></p>
          % }
        </span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="field_body">本文</label>
      <div class="controls">
        <textarea name="body" rows="20"><%= decode( $params->{body} ) %></textarea>
        <span class="help-inline">
          メールの本文を入力してください。
        </span>
      </div>
    </div>
    % if( $params->{forms_id} ) {
    <input type="hidden" name="forms_id" value="<%= $params->{forms_id} %>" />
    % }
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">登録</button>
      <a href="/admin/forms/view/<%= $params->{forms_id} %>" class="btn">キャンセル</a>
    </div>
  </form>
