% layout 'admin';
% title 'メールテンプレート登録';

  <ul class="breadcrumb">
    <li><a href="/admin/forms">フォーム</a><span class="divider">/</span></li>
    <li class="active">登録</li>
  </ul>
  % if( exists $params->{id} ) {
  <form method="POST" name="admin_mail_templates_edit" action="/admin/mailtemplates/edit/<%= $params->{id} %>" class="form-horizontal">
  % } else {
  <form method="POST" name="admin_mail_templates_add" action="/admin/mailtemplates/add" class="form-horizontal">
  % }
    <div class="control-group">
      <label class="control-label" for="field_from">From</label>
      <div class="controls">
        <input type="text" id="field_from" name="from" placeholder="" value="<%= decode( $params->{from} ) %>"" />
        <span class="help-inline">
          メールの送信者名を入力してください。
          % if( exists $messages->{from} ) {
          <p class="text-error"><%= decode( $messages->{from} ) %></p>
          % }
        </span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="field_to">To</label>
      <div class="controls">
        <input type="text" id="field_to" name="to" placeholder="" value="<%= decode( $params->{to} ) %>" />
        <span class="help-inline">
          メールの送り先を入力してください。
          % if( exists $messages->{to} ) {
          <p class="text-error"><%= decode( $messages->{to} ) %></p>
          % }
        </span>
      </div>
    </div>
