$(function() {
    $("#date_created_from").datepicker( {
        changeMonth: true,
        showOn: "button",
        dateFormat: "yy-mm-dd",
        onClose: function( selectedDate ) {
            $("#date_created_to").datepicker( "option","minDate", selectedDate );
        }
    } );
    $("#date_created_to").datepicker( {
        changeMonth: true,
